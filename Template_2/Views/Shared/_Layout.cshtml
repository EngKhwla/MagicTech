<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MagicTech</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Main template css file-->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
@*    <link rel="stylesheet" href="~/Template_2.styles.css" asp-append-version="true" />
*@
<!--Render all elements normally-->
    <link rel="stylesheet" href="~css/Normlize.css" />
    <!--fontawesome library-->
    <link rel="stylesheet" href="~/css/all.min.css" />
    <!--google font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
    
    <title>Magic tech | Template 2</title>
</head>
<body>
    <header>
      <div class="container">
            <img src="~/images/magic-tech-high-resolution-logo-transparent.png"  alt="logo" class="logo"/>
            <nav>
               <i class="fa-solid fa-bars toggle-menu" ></i>
               <ul>
                  <li><a href="#">Home</a></li>
                  <li><a href="#">Services</a></li>
                  <li><a href="#">portfilo</a></li>
                  <li><a href="#">About</a></li>
                  <li><a href="#">Pricing</a></li>
                  <li><a href="#">Contact</a></li>

                   
               </ul>
                <div class="form">
                    <i class="fas fa-search"></i>
                </div>
            </nav>
      </div>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



     <!--start footer section-->
    <footer class="border-top footer text-muted">
        <div class="container">
            <img src="~/images/magic-tech-high-resolution-logo-transparent.png"/>
            <h4>WE ARE SOCIAL</h4>
            <div class="social-icons">
                <i class="fab fa-facebook-f"></i>
                <i class="fab fa-twitter"></i>
                <i class="fas fa-home"></i>
                <i class="fab fa-linkedin"></i>

            </div>
            <p class="copyright">  &copy; 2024 <span>Magic tech</span>  - All Right Reserved </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!--end footer section-->

</body>
</html>
